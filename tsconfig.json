{
	"compilerOptions": {
		"baseUrl": "lib",
		"target": "esnext",
		"module": "esnext",
		"lib": ["esnext"],
		"moduleResolution": "node",
		"allowSyntheticDefaultImports": true,
		"declaration": true,
		"outDir": "./dist",
		"strict": true
	},
	"include": ["lib/**/*.ts", "lib/**/*.d.ts", "test/**/*.spec.ts", "lib/**/*.js"],
	"exclude": ["node_modules"]
}
