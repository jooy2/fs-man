{
	"name": "qsu-fs",
	"version": "1.2.0",
	"description": "A file system utility that can be used with Node.js fs module.",
	"author": "Jooy2 <jooy2.contact@gmail.com>",
	"license": "MIT",
	"homepage": "https://github.com/jooy2/qsu-fs",
	"repository": {
		"type": "git",
		"url": "https://github.com/jooy2/qsu-fs.git"
	},
	"bugs": {
		"url": "https://github.com/jooy2/qsu-fs/issues"
	},
	"type": "module",
	"types": "dist/index.d.ts",
	"engines": {
		"node": ">=18.0.0"
	},
	"scripts": {
		"build": "rimraf dist/ && npm run format:fix && tsc --allowJs --project tsconfig.prod.json && npm run minify",
		"test": "npm run build && glob -c \"tsx --test\" \"./test/**/*.test.ts\"",
		"lint": "eslint .",
		"lint:fix": "eslint --fix .",
		"minify": "terser-glob 'dist/*.js' --config-file terser.config.json",
		"prepare": "npm run build",
		"format": "prettier .",
		"format:fix": "prettier . --write"
	},
	"main": "dist/index.js",
	"exports": {
		".": "./dist/index.js"
	},
	"typesVersions": {
		"*": {
			"index.d.ts": [
				"dist/index.d.ts"
			]
		}
	},
	"keywords": [
		"file",
		"fs",
		"file management",
		"files",
		"explorer",
		"directory",
		"folder",
		"verify",
		"path",
		"windows",
		"macos",
		"unix",
		"linux",
		"hash",
		"md5"
	],
	"devDependencies": {
		"@types/node": "^22.10.1",
		"@typescript-eslint/eslint-plugin": "^7.14.1",
		"@typescript-eslint/parser": "^7.14.1",
		"eslint": "^8.57.0",
		"eslint-config-airbnb": "^19.0.4",
		"eslint-config-prettier": "^9.1.0",
		"eslint-plugin-import": "^2.29.1",
		"glob": "^11.0.0",
		"prettier": "^3.4.2",
		"rimraf": "^6.0.1",
		"terser-glob": "^1.1.0",
		"tsx": "^4.19.2",
		"typescript": "^5.7.2"
	}
}
